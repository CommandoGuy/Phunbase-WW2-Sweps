"VertexLitGeneric"
{
"$basetexture" "models\codww2\weapons\trenchgun\optic"
"$bumpmap" "models\codww2\weapons\trenchgun\optic_n"
"$PhongExponentTexture" "models\codww2\weapons\trenchgun\optic_s"

//detail
$detail  "models\codww2\weapons\trenchgun\optic_d"
$detailscale 1	
$detailblendfactor 0.05
$detailblendmode 2

//	"$color2" "[.85 .85 .85]"

//	"$phongexponent" "30"
	"$phongalbedotint" 0
	"$phong" "1"
	"$phongboost"	"1"
	"$phongfresnelranges"	"[0.5 1 5]"

	"$envmap" "models/customcubemaps/simplespec" // which envmap to use, "env_cubemap" can be used but this works best with static envmaps and the whole point of this is not to rely on env_cubemaps
	
	"Proxies" // needed proxy for it to work, put this in your material, chagnes the $envmaptint according to where the entity is positioned
	{
		"PB_ENVMAPTINT_REALTIME_COLOR"
		{
			"min" "0" // minimum brightness, should be 0, otherwise will be visible in pitch black areas
			"max" "0.1" // maximum brightness, sometimes small values like 0.25 or 0.5 are pretty much the max you need, depends on the material
		}
	}
	"$normalmapalphaenvmapmask"		"1"


	"$envmapfresnel"	"0.5"

	"$halflambert" "1"
	"$ambientocclusion" "1"
	"$nocull" "0"
}

