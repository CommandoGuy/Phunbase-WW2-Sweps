"VertexLitGeneric"
{
	"$basetexture"			"models\codww2\weapons\m2\receiver"
	"$bumpmap"			"models\codww2\weapons\m2\receiver_n"
                "$phongexponenttexture"  "models\codww2\weapons\m2\receiver_e"
	$blendtintbybasealpha  "1"

//detail
$detail  "models\codww2\weapons\m2\receiver_d"
$detailscale 1	
$detailblendfactor 0.075
$detailblendmode 1


	"$phong"  				"25"
	"$phongboost" 			"1.5"
	"$phongfresnelranges"	"[1 2 3]"
	"$phongalbedotint" 		"1"	

	"$envmapfresnel"	"1.25"
	"$envmap" "env_cubemap" // which envmap to use, "env_cubemap" can be used but this works best with static envmaps and the whole point of this is not to rely on env_cubemaps
	
	"Proxies" // needed proxy for it to work, put this in your material, chagnes the $envmaptint according to where the entity is positioned
	{
		"PB_ENVMAPTINT_REALTIME_COLOR"
		{
			"min" "0" // minimum brightness, should be 0, otherwise will be visible in pitch black areas
			"max" "0.2" // maximum brightness, sometimes small values like 0.25 or 0.5 are pretty much the max you need, depends on the material
		}
	}
	"$normalmapalphaenvmapmask"		"1"
}
