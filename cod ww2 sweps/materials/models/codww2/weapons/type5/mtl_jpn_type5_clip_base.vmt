VertexLitGeneric
{
	"$basetexture" "models\codww2\weapons\Type5\mtl_jpn_type5_clip_base"

	"$bumpmap" "models\codww2\weapons\Type5\mtl_jpn_type5_clip_base_normal"

    	"$surfaceprop" "metal"
"$phong"                      "1"
	"$phongboost"                 "0.15"
	"$phongexponent"		"35"
	"$phongfresnelranges"         "[5 10 10]"
	"$phongtint"		      "[1.05 1 1.1]"
	"$phongalbedotint"            "1"
	"$phongalbedoboost"           "145"

$envmapfresnel 0.5
	"$envmap" "env_cubemap" // which envmap to use, "env_cubemap" can be used but this works best with static envmaps and the whole point of this is not to rely on env_cubemaps
	
	"Proxies" // needed proxy for it to work, put this in your material, chagnes the $envmaptint according to where the entity is positioned
	{
		"PB_ENVMAPTINT_REALTIME_COLOR"
		{
			"min" "0" // minimum brightness, should be 0, otherwise will be visible in pitch black areas
			"max" "0.015" // maximum brightness, sometimes small values like 0.25 or 0.5 are pretty much the max you need, depends on the material
		}
	}
	"$normalmapalphaenvmapmask"		"1"

//detail
$detail  "models\codww2\weapons\Type5\metal_mag"
$detailscale 1	
$detailblendfactor 0.075
$detailblendmode 1	



	"$nocull" "1"


}