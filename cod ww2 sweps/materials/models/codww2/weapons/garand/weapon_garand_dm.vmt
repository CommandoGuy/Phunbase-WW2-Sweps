"VertexLitGeneric"
{
	"$basetexture"			"models\codww2\weapons\garand\weapon_garand_dm"
	"$bumpmap"	 			"models\codww2\weapons\garand\weapon_garand_nm"	

	$phong  				"1"
	$phongexponent			"43"
	$phongboost			"1"
	$phongfresnelranges		"[0.5 0.8 1]"
	$phongtint			"[0.8 0.9 1]"
	$phongalbedotint 			"1"	

	$normalmapalphaenvmapmask 	"1"
	"$envmap" "phunbase/envmaps/metal_generic_005" // which envmap to use, "env_cubemap" can be used but this works best with static envmaps and the whole point of this is not to rely on env_cubemaps
	
	"Proxies" // needed proxy for it to work, put this in your material, chagnes the $envmaptint according to where the entity is positioned
	{
		"PB_ENVMAPTINT_REALTIME_COLOR"
		{
			"min" "0" // minimum brightness, should be 0, otherwise will be visible in pitch black areas
			"max" "0.5" // maximum brightness, sometimes small values like 0.25 or 0.5 are pretty much the max you need, depends on the material
		}
	}
	"$envmapfresnel"		"5"
	$rimlight				"1"
	$rimlightboost			"0.03"
	$rimlightexponent			"235"
	$rimmask				"1"
}