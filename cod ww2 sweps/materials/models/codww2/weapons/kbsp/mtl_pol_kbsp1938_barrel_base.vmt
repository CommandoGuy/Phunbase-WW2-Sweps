"VertexLitGeneric"
{
	"$basetexture"			"models\codww2\weapons\kbsp\barrel_d"
	"$bumpmap"			"models\codww2\weapons\kbsp\barrel_n"
                "$phongexponenttexture"  "models\codww2\weapons\kbsp\barrel_e"

//detail
$detail  "models\codww2\weapons\kbsp\barrel_detail"
$detailscale 1	
$detailblendfactor 0.075
$detailblendmode 1


	"$phong"  				"1"
	//"$phongexponent" 		"48"
	"$phongboost" 			"1.5"
	"$phongfresnelranges"	"[1 2 3]"
	"$phongtint" 			"[0.6 0.8 1]"
	"$phongalbedotint" 		"1"	

	"$envmapfresnel"	"1.25"
	"$envmap" "models/customcubemaps/simplespec" // which envmap to use, "env_cubemap" can be used but this works best with static envmaps and the whole point of this is not to rely on env_cubemaps
	
	"Proxies" // needed proxy for it to work, put this in your material, chagnes the $envmaptint according to where the entity is positioned
	{
		"PB_ENVMAPTINT_REALTIME_COLOR"
		{
			"min" "0" // minimum brightness, should be 0, otherwise will be visible in pitch black areas
			"max" "0.025" // maximum brightness, sometimes small values like 0.25 or 0.5 are pretty much the max you need, depends on the material
		}
	}
	"$normalmapalphaenvmapmask"		"1"
}