VertexlitGeneric
{
	"$basetexture" "models\codww2\weapons\charlton\mag_s"
	"$bumpmap" "models\codww2\weapons\charlton\mag_n"
$phongexponenttexture "models/codww2/weapons/charlton/mag_e"

"$Color2"					"{ 40 40 40 }"
                "$additive""1"

$rimlight 0
	 "$rimlightexponent"   "10" 
	 "$rimlightboost"   "0.75"
                  $rimmask 1	

$halfambert 1
	"$phong" "1"
	"$phongboost"					"0.25"

	"$phongalbedotint" 0

	"$phongfresnelranges"			"[1 1.05 1.25]"

	"$envmap" "env_cubemap" // which envmap to use, "env_cubemap" can be used but this works best with static envmaps and the whole point of this is not to rely on env_cubemaps
	
	"Proxies" // needed proxy for it to work, put this in your material, chagnes the $envmaptint according to where the entity is positioned
	{
		"PB_ENVMAPTINT_REALTIME_COLOR"
		{
			"min" "0" // minimum brightness, should be 0, otherwise will be visible in pitch black areas
			"max" "0.1" // maximum brightness, sometimes small values like 0.25 or 0.5 are pretty much the max you need, depends on the material
		}
	}
	"$normalmapalphaenvmapmask"		"1"


	"$envmapfresnel"	"1.25"
}