"VertexlitGeneric"
{
	"$baseTexture" 			"models\codww2\weapons/shotgun/DragonsBreath_D"
	"$bumpmap" 			"models\codww2\weapons/shotgun/DragonsBreath_N"
	$nocull 				1
	$halflambert			 0
	"$color2"     			 "[1.5 1.5 1.5]"

	"$phong" 				"1"
	"$phongexponenttexture"		 "models\codww2\weapons/shotgun/DragonsBreath_G"
	"$phongboost" 			"50"
	"$phongfresnelranges" 		"[1 2 3]"
	$phongalbedotint			 1
$envmapfresnel "0.25"

	$basemapalphaenvmapmask 	"1"
"$envmap" "phunbase/envmaps/metal_generic_002" // which envmap to use, "env_cubemap" can be used but this works best with static envmaps and the whole point of this is not to rely on env_cubemaps
	
	"Proxies" // needed proxy for it to work, put this in your material, chagnes the $envmaptint according to where the entity is positioned
	{
		"PB_ENVMAPTINT_REALTIME_COLOR"
		{
			"min" "0" // minimum brightness, should be 0, otherwise will be visible in pitch black areas
			"max" "0.025" // maximum brightness, sometimes small values like 0.25 or 0.5 are pretty much the max you need, depends on the material
		}
	}


	$ambientocclusion			 1
}



