"VertexLitGeneric"
{
	$basetexture	"models\codww2\weapons\mp40\weapon_mp40_dm"
	$bumpmap		"models\codww2\weapons\mp40\weapon_mp40_nm"
	$phongexponenttexture      		"models\codww2\weapons\mp40\weapon_mp40_exp"
//BASIC
	$model						"1"
    $color						"[ .75 .75 .75 ]"
	
//SELFILLUM (subtle to avoid complete occlusion)
	$selfillum					"1"
	$selfillumtint				"[ .5 .5 .5 ]"

//PHONG
	$phong                      "1"
	$phongtint                  "[ .67 .85 1 ]"
	$phongboost                	"15"
//	$phongexponent				"60"
	$phongfresnelranges       	"[ .1 .5 1 ]"

//RIMLIGHT
	$rimlight					"1"
	$rimlightexponent       	"80"
	$rimmask					"1"
	$rimlightboost          	".25"	

//ENVMAP
	"$envmap" "env_cubemap" 
	
	"Proxies" // needed proxy for it to work, put this in your material, chagnes the $envmaptint according to where the entity is positioned
	{
		"PB_ENVMAPTINT_REALTIME_COLOR"
		{
			"min" "0" // minimum brightness, should be 0, otherwise will be visible in pitch black areas
			"max" "0.25" // maximum brightness, sometimes small values like 0.25 or 0.5 are pretty much the max you need, depends on the material
		}
	}
	"$normalmapalphaenvmapmask"		"1"

}