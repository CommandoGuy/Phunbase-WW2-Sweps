"VertexLitGeneric"
{
	"$basetexture"					"models\codww2\weapons\fg42_d\weapon_fg42_dm"
	"$bumpmap"						"models\codww2\weapons\fg42_d\weapon_fg42_nm"
	
	"$selfillummask"				"models\codww2\weapons\generic\weapon_generic_si"
	"$model"						"1"
    "$color"						"[1 1 1]"

//SELFILLUM (subtle to avoid complete occlusion)
	"$selfillum"					"1"
	"$selfillumtint"				"[.5 .5 .5]"

//PHONG
	"$phong"                        "1"
	"$phongtint"                    "[.67 .85 1]"
	"$phongboost"                   "4"
	"$phongexponent"				"50"
	"$phongfresnelranges"           "[1 3 6]"

//ENVMAP
	"$envmap" "phunbase/envmaps/metal_generic_004" // which envmap to use, "env_cubemap" can be used but this works best with static envmaps and the whole point of this is not to rely on env_cubemaps
	
	"Proxies" // needed proxy for it to work, put this in your material, chagnes the $envmaptint according to where the entity is positioned
	{
		"PB_ENVMAPTINT_REALTIME_COLOR"
		{
			"min" "0" // minimum brightness, should be 0, otherwise will be visible in pitch black areas
			"max" "1.25" // maximum brightness, sometimes small values like 0.25 or 0.5 are pretty much the max you need, depends on the material
		}
	}
	"$normalmapalphaenvmapmask"		"1"
}