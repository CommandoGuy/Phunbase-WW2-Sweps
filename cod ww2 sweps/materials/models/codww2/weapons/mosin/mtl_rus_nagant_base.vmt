VertexLitGeneric
{
	"$basetexture" "models\codww2\weapons\mosin\base"
	"$bumpmap" "models\codww2\weapons\mosin\base_n"
$phongexponenttexture "models/codww2/weapons/mosin/base_e"

//detail
$detail  "models\codww2\weapons\mosin\base_d"
$detailscale 1	
$detailblendfactor 0.01
$detailblendmode 2

$rimlight 1
	 "$rimlightexponent"   "50" 
	 "$rimlightboost"   "0.75"
                  $rimmask 1	

$halfambert 1
	"$phong" "1"
	"$phongboost"					"50"
$phongalbedotint 1
	"$phongfresnelranges"			"[1.25 1.25 1.15]"

	"$envmap" "env_cubemap" // which envmap to use, "env_cubemap" can be used but this works best with static envmaps and the whole point of this is not to rely on env_cubemaps
	
	"Proxies" // needed proxy for it to work, put this in your material, chagnes the $envmaptint according to where the entity is positioned
	{
		"PB_ENVMAPTINT_REALTIME_COLOR"
		{
			"min" "0" // minimum brightness, should be 0, otherwise will be visible in pitch black areas
			"max" "0.25" // maximum brightness, sometimes small values like 0.25 or 0.5 are pretty much the max you need, depends on the material
		}
	}
	"$normalmapalphaenvmapmask"		"1"


	"$envmapfresnel"	"5.25"
	"$halflambert"                "1"
}